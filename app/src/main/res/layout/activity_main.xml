<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnHacerReporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="hacerReporte"
        android:text="Haga su Reporte" />

    <Button
        android:id="@+id/btnRevisarReporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHacerReporte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="revisarReporte"
        android:text="Revisar Reporte" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:onClick="volverLogIn"
        android:text="Salir" />

    <Button
        android:id="@+id/fabNewPost"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRevisarReporte"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="121dp"
        android:onClick="crearPost"
        android:text="AÃ±adir Post" />

</RelativeLayout>